{
    "extends": "@tsconfig/node18/tsconfig.json",
    "include": ["src"],
    "exclude": ["node_modules", "./**/dist"],
    "compilerOptions": {
        "resolveJsonModule": true,
        "declarationMap": true,
        "declaration": true,
        "rootDir": "./src",
        "lib": ["dom", "dom.iterable", "esnext"],
        "target": "es2019",
        "jsx": "react",
        "strict": true,
        "outDir": "./dist"
    }
}
